<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:name="splash_vector"
            android:width="108dp"
            android:height="108dp"
            android:viewportWidth="108"
            android:viewportHeight="108">
            <!-- Background circle -->
            <group android:name="circle_group"
                android:pivotX="54"
                android:pivotY="54">
                <path
                    android:name="circle"
                    android:fillColor="#FFFFFF"
                    android:pathData="M54,24 A30,30 0 1,1 53.99,24 Z" />
            </group>
            <!-- Chat bubble icon -->
            <group android:name="chat_group"
                android:pivotX="54"
                android:pivotY="54"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="chat_icon"
                    android:fillColor="#6200EE"
                    android:pathData="M54,36 C41.85,36 32,43.84 32,53.5 C32,58.5 34.73,62.96 39,66 L39,76 L49,71 C50.6,71.33 52.27,71.5 54,71.5 C66.15,71.5 76,63.66 76,54 C76,44.34 66.15,36 54,36 Z M44,52 A3,3 0 1,1 44.01,52 Z M54,52 A3,3 0 1,1 54.01,52 Z M64,52 A3,3 0 1,1 64.01,52 Z" />
            </group>
        </vector>
    </aapt:attr>

    <!-- Scale animation for the chat icon -->
    <target android:name="chat_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="scaleX"
                android:valueFrom="0"
                android:valueTo="1"
                android:duration="500"
                android:interpolator="@android:interpolator/overshoot" />
        </aapt:attr>
    </target>

    <target android:name="chat_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="scaleY"
                android:valueFrom="0"
                android:valueTo="1"
                android:duration="500"
                android:interpolator="@android:interpolator/overshoot" />
        </aapt:attr>
    </target>

    <!-- Rotation animation for the circle -->
    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="360"
                android:duration="1000"
                android:interpolator="@android:interpolator/accelerate_decelerate" />
        </aapt:attr>
    </target>
</animated-vector>
